{
  "name": "hackboxgames_server",
  "version": "0.0.1",
  "description": "HackboxGames",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "nodemon",
    "build:ts": "tsc",
    "tslint": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "npm run build:ts && npm run tslint",
    "serve": "node build/server.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AylaJK/HackboxGames"
  },
  "author": "Austin W. & Kayleigh K.",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.2",
    "cookie-parser": "^1.4.3",
    "express": "^4.16.2",
    "socket.io": "^2.1.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.11.1",
    "@types/node": "^8.10.11",
    "@types/socket.io": "^1.4.33",
    "nodemon": "^1.17.3",
    "ts-node": "^6.0.2",
    "tslint": "^5.9.1",
    "typescript": "^2.8.3"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ignore": [
      "client/*"
    ],
    "ext": "js,jsx,ts,tsx",
    "exec": "ts-node src/server.ts"
  }
}
